<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop" xmlns:context="http://www.springframework.org/schema/context"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!-- *********************SERVICES & REPOSITORY CONFIGURATION************************ -->

    <context:annotation-config/>
    <context:component-scan base-package="com.ams">
        <context:include-filter type="regex" expression=".*jpa\.[^.]*"/>
        <context:include-filter type="regex" expression=".*service\.[^.]*"/>
    </context:component-scan>


    <!-- *********************LOGGER AOP SERVICE CONFIGURATION ************************ -->
    <bean id="LoggerService" class="com.ams.sharedkernel.ports.adapter.logger.ApplicationLogger">
    </bean>
    <aop:config>
        <aop:pointcut expression="execution(* com.ams..*.*(..))"
                      id="loggingPoint"/>
        <aop:aspect ref="LoggerService">
            <aop:around pointcut-ref="loggingPoint" method="log"/>
        </aop:aspect>
    </aop:config>
</beans>